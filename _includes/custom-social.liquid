<div class="social-section">
    <div class="social-links">
        {% if site.data.social.soundcloud %}
            <a href="{{ site.data.social.soundcloud }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="SoundCloud">
                <i class="fab fa-soundcloud"></i>
            </a>
        {% endif %}
        {% if site.data.social.github %}
            <a href="{{ site.data.social.github }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
                <i class="fab fa-github"></i>
            </a>
        {% endif %}
        {% if site.data.social.instagram %}
            <a href="{{ site.data.social.instagram }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Instagram">
                <i class="fab fa-instagram"></i>
            </a>
        {% endif %}
        {% if site.data.social.linkedin %}
            <a href="{{ site.data.social.linkedin }}" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
                <i class="fab fa-linkedin"></i>
            </a>
        {% endif %}
    </div>
</div>
